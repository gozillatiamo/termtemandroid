<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:padding="@dimen/activity_space"
        android:text="@string/type_report"/>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_topup_report"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:drawableTint="@android:color/darker_gray"
        android:padding="@dimen/activity_vertical_margin"
        android:text="@string/report_topup"
        android:textStyle="bold"
        android:textSize="16sp"
        android:drawableLeft="@drawable/ic_smartphone"
        android:textColor="@android:color/darker_gray"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_cashin_agent_report"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:drawableLeft="@drawable/ic_people"
        android:drawableTint="@android:color/darker_gray"
        android:padding="@dimen/activity_vertical_margin"
        android:text="@string/report_cashin_agent"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"/>
</LinearLayout>