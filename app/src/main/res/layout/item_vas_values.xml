<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_small_space"
    android:elevation="@dimen/activity_small_space">

    <TextView
        android:id="@+id/text_price_values"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10 บาท"
        style="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_speed_internet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="เน็ตความเร็ว 512k"
            android:textSize="@dimen/my_text_large"
            style="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/text_volume_internet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/activity_small_space"
            android:textSize="@dimen/my_text_size"
            style="@style/TextAppearance.AppCompat.Medium"
            android:text="ปริมาณ 500 MB/1วัน"/>
    </LinearLayout>
</LinearLayout>