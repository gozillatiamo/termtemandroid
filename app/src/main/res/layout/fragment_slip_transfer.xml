<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:layout_margin="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:elevation="@dimen/cardview_default_elevation"
            android:padding="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:src="@drawable/logo_with_text"
                android:tint="@android:color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_space"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:paddingLeft="@dimen/activity_space"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="@dimen/icon_size"
                    android:drawableLeft="@drawable/credit_card"
                    android:drawablePadding="8dp"
                    android:text="Credit"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100,500"
                    android:textSize="@dimen/icon_size"
                    android:gravity="right|center"
                    android:textStyle="bold"
                    android:textColor="@color/colorSelector"
                    style="@style/TextAppearance.AppCompat.Medium.Inverse"
                    android:drawableRight="@drawable/coin"
                    android:drawablePadding="@dimen/activity_space"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/activity_space"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:text="เลขที่รายการ:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_space"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:text="100001"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:text="อัตราแลกเปลี่ยน:"
                    android:id="@+id/textView4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/activity_space"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="@dimen/icon_size"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:gravity="center"
                            style="@style/TextAppearance.AppCompat.Medium"
                            android:drawablePadding="@dimen/activity_space"
                            android:drawableRight="@drawable/coin"/>
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/repeat"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="2"
                        android:textSize="@dimen/icon_size"
                        android:textStyle="bold"
                        android:gravity="center"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:drawablePadding="@dimen/activity_space"
                        android:drawableRight="@drawable/american_dollar_64"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:text="จำนวนเงิน:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:layout_marginLeft="@dimen/activity_space"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:drawablePadding="@dimen/activity_space"
                    android:drawableRight="@drawable/american_dollar_64"
                    android:text="1,000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:text="จำนวนCoin:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:layout_marginLeft="@dimen/activity_space"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:text="500"

                    android:drawableRight="@drawable/coin_24"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:text="วันที่ทำรายการ:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_space"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:text="21/11/17 08:30"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:text="สถานะ:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_space"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:background="@drawable/bg_status"
                    android:textColor="@android:color/white"
                    android:text="สำเร็จ"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_back_to_dashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_button"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:text="กลับสู่หน้าหลัก"
                style="@style/MyTextButton"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>