<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:padding="@dimen/activity_space"
    tools:context="com.worldwidewealth.wealthcounter.dashboard.addcreditline.fragment.FragmentOtherAmount">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/icon_large_size">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amount"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:theme="@style/MyEditTextStyle"
            android:gravity="center"
            android:padding="@dimen/activity_space"
            android:layout_marginLeft="@dimen/activity_space"/>
    </LinearLayout>
</FrameLayout>
