<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.worldwidewealth.termtem.dashboard.addCreditAgent.fragment.FragmentOtherAmount"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/activity_space"
        android:layout_marginBottom="@dimen/activity_space"
        android:padding="@dimen/activity_space">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/icon_large_size">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount"/>
            <EditText
                android:id="@+id/edit_other_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:theme="@style/MyEditTextStyle"
                android:gravity="center"
                android:padding="@dimen/activity_vertical_margin"
                android:inputType="numberDecimal"
                android:imeOptions="actionDone"
                android:layout_marginLeft="@dimen/activity_space"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
