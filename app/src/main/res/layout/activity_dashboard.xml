<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_menu"
                        style="@style/MyTitleActionBar"
                        />
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.AppBarLayout>
            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_space"
                    >

                    <include
                        android:id="@+id/include_my_wallet"
                        layout="@layout/card_my_wallet" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/menu_add_credit_agent"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/menu_size"
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        app:cardUseCompatPadding="true"

                        app:cardElevation="@dimen/cardview_default_elevation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/MyIconMenuDashboard"
                                android:src="@drawable/ic_add_credit_agent"
                                android:tint="@color/colorPrimary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/add_credit_agent"
                                style="@style/MyTitleMenuDashboard"
                                android:id="@+id/autofitTextView" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <android.support.v7.widget.CardView
                            android:id="@+id/menu_topup"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/menu_size"
                            android:visibility="gone"
                            android:layout_weight="1"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            app:cardUseCompatPadding="true"
                            app:cardElevation="@dimen/cardview_default_elevation"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    style="@style/MyIconMenuDashboard"
                                    android:src="@drawable/ic_topup"
                                    android:tint="@color/colorPrimary"
                                    android:id="@+id/imageView10" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    style="@style/MyTitleMenuDashboard"
                                    android:text="@string/topup"
                                    android:id="@+id/autofitTextView4" />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/menu_report"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/menu_size"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardElevation="@dimen/cardview_default_elevation"
                            app:cardUseCompatPadding="true">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center"

                                >
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    style="@style/MyIconMenuDashboard"
                                    android:tint="@color/colorPrimary"
                                    android:src="@drawable/ic_report"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/report_history"
                                    style="@style/MyTitleMenuDashboard"
                                    android:id="@+id/autofitTextView7" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <android.support.v7.widget.CardView
                            android:id="@+id/menu_setting"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/menu_size"
                            android:visibility="gone"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_weight="1"
                            app:cardElevation="@dimen/cardview_default_elevation"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center"

                                >
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    style="@style/MyIconMenuDashboard"
                                    android:tint="@color/colorPrimary"
                                    android:src="@drawable/ic_setting" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/setting"
                                    style="@style/MyTitleMenuDashboard"
                                    android:id="@+id/autofitTextView3" />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:id="@+id/menu_help"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/menu_size"
                            android:visibility="gone"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_weight="1"
                            app:cardElevation="@dimen/cardview_default_elevation"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center"

                                >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    style="@style/MyIconMenuDashboard"
                                    android:src="@drawable/ic_support"
                                    android:tint="@color/colorPrimary"
                                    android:id="@+id/imageView9" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/support"
                                    style="@style/MyTitleMenuDashboard"
                                    android:id="@+id/autofitTextView5" />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <android.support.v7.widget.CardView
                            android:id="@+id/menu_scan_qr"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/menu_size"
                            android:visibility="gone"
                            android:layout_weight="1"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center"

                                >
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    style="@style/MyIconMenuDashboard"
                                    android:tint="@color/colorPrimary"
                                    android:src="@drawable/ic_scan_qr"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/dashboard_scan_qr"
                                    style="@style/MyTitleMenuDashboard"
                                    android:id="@+id/autofitTextView6" />
                            </LinearLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/menu_my_qr"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/menu_size"
                            android:visibility="gone"
                            android:layout_weight="1"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center"

                                >
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    style="@style/MyIconMenuDashboard"
                                    android:src="@drawable/ic_my_qr"
                                    android:tint="@color/colorPrimary"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/dashboard_my_qr"
                                    style="@style/MyTitleMenuDashboard"

                                    />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>


                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:id="@+id/menu_report_mtf"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/menu_size"
                        android:visibility="gone"
                        app:cardUseCompatPadding="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardElevation="@dimen/cardview_default_elevation"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                style="@style/MyIconMenuDashboard"
                                android:tint="@color/colorPrimary"
                                android:src="@drawable/ic_report_money_tf"
                                android:id="@+id/imageView7" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                style="@style/MyTitleMenuDashboard"
                                android:text="@string/dashboard_mtf"
                                android:id="@+id/autofitTextView2" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/menu_mpay_station"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/menu_size"
                        android:visibility="gone"
                        app:cardUseCompatPadding="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                style="@style/MyIconMenuDashboard"
                                android:src="@drawable/mpay_icon"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                style="@style/MyTitleMenuDashboard"
                                android:text="@string/menu_mpay" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/menu_maps"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/menu_size"
                        android:visibility="visible"
                        app:cardUseCompatPadding="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                style="@style/MyIconMenuDashboard"
                                android:src="@drawable/ic_map"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                style="@style/MyTitleMenuDashboard"
                                android:text="Maps" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <com.worldwidewealth.termtem.widgets.MenuButtonView
                        android:id="@+id/mbv_test"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </com.worldwidewealth.termtem.widgets.MenuButtonView>

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>
        </android.support.design.widget.CoordinatorLayout>
    </android.support.v4.widget.DrawerLayout>
</FrameLayout>