<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="?attr/colorPrimary"
        android:gravity="center"
        android:elevation="@dimen/elevation_cardview">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/wallet_money"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/credit_balance"
            android:textColor="@color/colorTextTitle"
            style="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100,000"
            android:gravity="center"
            android:textColor="@color/colorSelector"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Medium"
            android:drawablePadding="@dimen/activity_space"
            android:drawableRight="@drawable/coin"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/cardview_default_elevation"
        >
    </android.support.v7.widget.RecyclerView>

</LinearLayout>