<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorPrimary"
    android:elevation="@dimen/cardview_default_elevation"
    android:padding="@dimen/activity_horizontal_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:src="@drawable/logo_with_text_old"
        android:tint="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_space"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="right"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:paddingLeft="@dimen/activity_space"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            style="@style/TextAppearance.AppCompat.Headline"
            android:textSize="@dimen/icon_size"
            android:drawableLeft="@drawable/credit_card"
            android:drawablePadding="8dp"
            android:text="Credit"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100,500"
            android:textSize="@dimen/icon_size"
            android:gravity="right|center"
            android:textStyle="bold"
            android:textColor="@color/colorSelector"
            style="@style/TextAppearance.AppCompat.Medium.Inverse"
            android:drawableRight="@drawable/coin"
            android:drawablePadding="@dimen/activity_space"/>
    </LinearLayout>

</LinearLayout>
