<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_mpay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.worldwidewealth.termtem.dashboard.topup.ActivityTopup">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_mpay"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/background_primary"
            app:theme="@style/ToolbarColored">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                app:sizeToFit="true"
                android:singleLine="true"
                style="@style/MyTitleActionBar"
                />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:id="@+id/container_mpay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:id="@+id/layout_mpay_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:padding="@dimen/activity_space"
                >
                <me.grantland.widget.AutofitTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_amount_to_agent_transfer"
                    android:gravity="center"
                    app:sizeToFit="true"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_menu_size_dashboard"
                    android:layout_marginTop="@dimen/activity_space"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_space"
                    android:paddingRight="@dimen/activity_space"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_mpay_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                </android.support.v7.widget.RecyclerView>
                <RelativeLayout
                    android:id="@+id/layout_edit_amount_other"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:layout_weight="1">
                    <EditText
                        android:id="@+id/edit_amount_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/please_enter_amount"
                        android:inputType="numberDecimal"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:padding="@dimen/activity_space"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:background="@android:drawable/editbox_background_normal"/>

                </RelativeLayout>
            </LinearLayout>

            <include
                android:id="@+id/include_bottom_action"
                layout="@layout/bottom_action"/>
        </LinearLayout>

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

        </WebView>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
