<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/title_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bank"
            android:textStyle="bold"
            android:textSize="@dimen/small_text_size"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="right|center"
            >
            <ImageView
                android:id="@+id/bank_logo"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/kbank"/>
            <TextView
                android:id="@+id/bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_space"
                android:text="@string/kbank"
                android:textSize="@dimen/small_text_size"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bank_saving_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_small_space"
        android:paddingRight="@dimen/activity_small_space"
        android:paddingTop="@dimen/activity_space"
        android:paddingBottom="@dimen/activity_space"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saving_account"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/saving_account_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="@dimen/small_text_size"
            android:autoLink="all"
            android:text="@string/kbank_saving_account_number"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_promptpay_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_small_space"
        android:paddingRight="@dimen/activity_small_space"
        android:paddingTop="@dimen/activity_space"
        android:paddingBottom="@dimen/activity_space"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/promptpay_account"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/promptpay_account_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="@dimen/small_text_size"
            android:autoLink="all"
            android:text="@string/kbank_saving_account_number"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_small_space"
        android:paddingRight="@dimen/activity_small_space"
        android:paddingTop="@dimen/activity_space"
        android:paddingBottom="@dimen/activity_space"

        android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold"
                android:text="@string/title_bank_account_name"/>

        <TextView
            android:id="@+id/account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/bank_account_name"
            android:textSize="@dimen/small_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bank_branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_small_space"
        android:paddingRight="@dimen/activity_small_space"
        android:paddingTop="@dimen/activity_space"
        android:paddingBottom="@dimen/activity_space"

        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold"
            android:text="@string/title_branch"/>
        <TextView
            android:id="@+id/bank_branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginLeft="@dimen/activity_space"
            android:textSize="@dimen/small_text_size"
            android:text="@string/kbank_branch"/>
    </LinearLayout>

</LinearLayout>