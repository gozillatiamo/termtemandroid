<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_text_size">
        <ImageView
            android:id="@+id/icon_notify"
            android:layout_width="@dimen/icon_large_size"
            android:layout_height="@dimen/icon_large_size"
            android:src="@drawable/termtem_logo"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_space"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title_notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Medium"
                android:text="ทดสอบ InBox เติมเงิน AIS จำนวนทั้งหม"
                android:textStyle="bold"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/des_notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_marginTop="@dimen/activity_small_space"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="dkfjskdljfsdlfsdklfdskljfsdklfsljfsldkfdsljfsdklfjsdklfdsjklfjsdkfsdklfjdsklfjsdklfjdslkfdsfkldsjflds"
                />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
