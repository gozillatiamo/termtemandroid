<resources xmlns:tools="http://schemas.android.com/tools">
    <drawable name="ic_launcher_app">@drawable/termtem_logo_2</drawable>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="background">@color/colorBackground</item>
        <item name="actionModeBackground">@color/colorAccent</item>
    </style>

    <style name="MyEditTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColorHint">@android:color/secondary_text_dark_nodisable</item>
    </style>

    <style name="MyTextButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="BtnSubmit" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/ripple_green</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleSlip" parent="Base.CardView">
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
        <item name="cardElevation">@dimen/cardview_default_radius</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:layout_margin">@dimen/activity_vertical_margin</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ToolbarColored" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="MyButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/my_text_size</item>ti
        <item name="android:padding">@dimen/activity_vertical_margin</item>
    </style>

    <style name="MyContainerFragment">
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="MyTitleActionBar" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/my_text_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyIconMenuDashboard">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:paddingTop">@dimen/padding_icon_dashboard</item>
        <item name="android:paddingBottom">@dimen/padding_icon_dashboard</item>
        <item name="android:paddingLeft">@dimen/activity_space</item>
        <item name="android:paddingRight">@dimen/activity_space</item>
    </style>

    <style name="MyTextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/secondary_text_dark</item>

    </style>

    <style name="MyTitleMenuDashboard">
        <item name="android:singleLine">true</item>
        <item name="sizeToFit">true</item>
        <item name="android:textSize">@dimen/text_menu_size_dashboard</item>
        <item name="android:paddingTop">@dimen/padding_icon_dashboard</item>
        <item name="android:paddingBottom">@dimen/padding_icon_dashboard</item>
        <item name="android:paddingRight">@dimen/activity_space</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyTabTextStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/my_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="MyTabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextStyle</item>
    </style>
    
    <style name="MyAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:labelTextSize">@dimen/small_text_size</item>
    </style>

</resources>
